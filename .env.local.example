# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe Live Keys (DO NOT commit real keys to git!)
STRIPE_SECRET_KEY=sk_live_your_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Stripe Payment Links (Live)
NEXT_PUBLIC_STRIPE_LAST_MINUTE_LINK=https://buy.stripe.com/your_last_minute_link
NEXT_PUBLIC_STRIPE_SENZA_PENSIERI_LINK=https://buy.stripe.com/your_senza_pensieri_link

# Webhook Endpoint (for Stripe)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
